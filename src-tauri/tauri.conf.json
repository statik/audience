{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri-conf/main/tauri.conf.json",
  "productName": "PTZ Cam Controller",
  "version": "1.0.0",
  "identifier": "com.ptzcam.controller",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PTZ Cam Controller",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; connect-src 'self' http://127.0.0.1:*; img-src 'self' http://127.0.0.1:*; style-src 'self' 'unsafe-inline'; media-src 'self' http://127.0.0.1:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
